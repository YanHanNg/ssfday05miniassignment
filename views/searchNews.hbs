<form action="/searchNews" method="POST">
    <div class="form-group">
        <label for="newsSearch" class="l-bold"><span>News Search</span></label>
        <input type="text" name="newsSearch" id="newsSearch" class="form-control"
        placeholder="Enter the news you want to see">
    </div>
    <div class="input-group">
        <div class="row">
            <div class="col">
                <input type="radio" value="us" name="country" id="us" checked>
                <img src="/flags/us.png" alt="US">
                <input type="radio" value="uk" name="country" id="uk">
                <img src="/flags/uk.png" alt="UK">
                <input type="radio" value="fr" name="country" id="fr">
                <img src="/flags/fr.png" alt="FR">
            </div>
        </div>
    </div>
    <div class="input-group">
        <div class="row">
            <div class="col">
                <input type="radio" value="sg" name="country" id="sg">
                <img src="/flags/sg.png" alt="SG">
                <input type="radio" value="jp" name="country" id="jp">
                <img src="/flags/jp.png" alt="JP">
                <input type="radio" value="cn" name="country" id="cn">
                <img src="/flags/cn.png" alt="CN">
            </div>
        </div>      
    </div>
    <div class="form-group" id="category">
        <select name="category" id="" class="form-control">
             {{#each category}}
                <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select> 
    </div>
    <div class="form-group">
        <button class="btn-primary" type="submit">Search</button>
    </div>   
</form>